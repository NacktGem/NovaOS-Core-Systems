{
  "name": "novaos-core-systems",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*",
    "agents/*",
    "modules/*"
  ],
  "scripts": {
    "assets:generate": "node tools/asset-generator/generate.mjs",
    "assets:recolor": "node tools/asset-generator/recolor.mjs",
    "assets:tint": "node tools/asset-generator/tint_from_reference.mjs",
    "preinstall": "npx -y only-allow pnpm",
    "build:all": "pnpm -r run build",
    "lint:all": "pnpm -r lint",
    "test:all": "pnpm -r test",
    "test": "vitest run",
    "dev": "concurrently -n api,echo,web,gc,nova \"pnpm --filter ./services/core-api dev\" \"pnpm --filter ./services/echo dev\" \"pnpm --filter ./apps/web-shell dev\" \"pnpm --filter ./apps/gypsy-cove dev\" \"pnpm --filter ./apps/novaos dev\"",
    "dev:all": "pnpm -r dev",
    "dev:docker": "docker compose --profile app --profile infra up --build",
    "dev:mac": "bash scripts/dev.sh",
    "dev:linux": "bash scripts/dev.sh",
    "dev:win": "powershell -ExecutionPolicy Bypass -File scripts/dev.ps1",
    "e2e": "bash scripts/e2e.sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/node": "^24.3.0",
    "concurrently": "^9.1.0",
    "critters": "^0.0.25",
    "eslint": "^9.13.0",
    "prettier": "^3.3.3",
    "puppeteer": "^23.4.1",
    "sharp": "^0.33.4",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.12"
  }
}
