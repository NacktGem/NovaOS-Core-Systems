{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/result_envelope.schema.json",
  "title": "ResultEnvelope",
  "description": "Envelope describing the outcome of a processed task.",
  "type": "object",
  "required": ["id", "task_id", "status"],
  "properties": {
    "id": {
      "type": "string",
      "description": "A unique identifier for the result event."
    },
    "task_id": {
      "type": "string",
      "description": "Identifier of the corresponding task."
    },
    "status": {
      "type": "string",
      "enum": ["ok", "error"],
      "description": "Status of the processed task."
    },
    "output": {
      "description": "Output data when the task completed successfully.",
      "type": ["object", "null"]
    },
    "error": {
      "description": "Error information when the task failed.",
      "type": ["object", "null"]
    }
  },
  "additionalProperties": false
}
