{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ModerationFlagged",
  "description": "Event emitted when a message is flagged by moderation",
  "type": "object",
  "properties": {
    "message_id": {
      "type": "string",
      "description": "ID of the flagged message"
    },
    "room_id": {
      "type": "string",
      "description": "ID of the room containing the message"
    },
    "reason": {
      "type": "string",
      "description": "Reason for flagging the message"
    },
    "severity": {
      "type": "string",
      "description": "Severity of the flag",
      "enum": ["low", "medium", "high"]
    }
  },
  "required": ["message_id", "room_id", "reason", "severity"],
  "additionalProperties": false
}
